<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="teacherUI" parent="FirebaseUI">
        <item name="colorPrimary">@color/teacherUI_primary</item>
        <item name="colorPrimaryDark">@color/teacherUI_primaryDark</item>
        <item name="colorControlActivated">#673AB7</item>
    </style>

    <style name="studentUI" parent="FirebaseUI">
        <item name="colorPrimary">@color/studentUI_primary</item>
        <item name="colorPrimaryDark">@color/studentUI_primaryDark</item>
        <item name="colorControlActivated">#2196F3</item>
    </style>

</resources>
