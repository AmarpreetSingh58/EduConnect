<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.amarpreetsinghprojects.educonnect.SignInActivities.RegisterAsActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardElevation="6dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        android:id="@+id/teacher_sign_in_cardView">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/teacher_sign_in_logo" />
    </android.support.v7.widget.CardView>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardElevation="6dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        android:id="@+id/student_sign_in_cardView">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/student_sign_in_logo" />
    </android.support.v7.widget.CardView>

</LinearLayout>
