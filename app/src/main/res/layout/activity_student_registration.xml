<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@drawable/student_background_pattern"
    tools:context="com.amarpreetsinghprojects.educonnect.SignInActivities.StudentRegistrationActivity">

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/studentRegidtrationActivityTabLayout"
        android:background="#00BCD4"
        app:tabSelectedTextColor="@android:color/white"></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/studentRegidtrationActivityViewpager"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:id="@+id/studentRegidtrationActivitynextButton"
        style="?android:borderlessButtonStyle"
        android:background="@color/studentUI_primary"
        android:textColor="@android:color/white"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
